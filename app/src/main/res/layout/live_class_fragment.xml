<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_illustration"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.liveclass.LiveClassFragment">

    <TextView
        android:id="@+id/tvLiveClassHeading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/title_live_class"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/light_shade_of_blue"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"/>

    <TextView
        android:id="@+id/tvSubjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvLiveClassHeading"
        android:text="Math"/>

    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/shade_of_blue"
        app:layout_constraintTop_toBottomOf="@+id/tvSubjectName"
        android:text="Mr. Sujay Bose"/>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/deep_yellow"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherName"/>

    <TextView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="Join Live Class"
        android:gravity="center"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:drawableStart="@drawable/ic_live_class"
        android:background="@drawable/bg_orange_without_stroke"
        android:backgroundTint="@color/yellow_light_dark"
        app:layout_constraintTop_toTopOf="@id/ivImage"
        app:layout_constraintBottom_toBottomOf="@id/ivImage"
        app:layout_constraintEnd_toEndOf="@id/ivImage"
        app:layout_constraintStart_toStartOf="@id/ivImage"/>


    <TextView
        android:id="@+id/btnStartLiveClass"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/bg_orange_without_stroke"
        android:backgroundTint="@color/light_red"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_6sdp"
        android:paddingEnd="@dimen/_6sdp"
        android:textSize="@dimen/_12sdp"
        android:text="@string/live"
        android:textAllCaps="true"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="@id/ivImage"
        app:layout_constraintEnd_toEndOf="@id/ivImage"
        app:layout_constraintBottom_toBottomOf="@id/ivImage"
        app:drawableTint="@color/white"
        app:drawableEndCompat="@drawable/ic_baseline_remove_red_eye_24" />


</androidx.constraintlayout.widget.ConstraintLayout>