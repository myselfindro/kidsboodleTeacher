<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CLCheckStudent"
    app:cardElevation="@dimen/_1sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/LLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_vertical"

                android:text="Name - "/>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                tools:text="Subhajit das"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/LLName">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:text="Roll No - "/>
            <TextView
                android:id="@+id/tvRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                tools:text="240"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btnViewDetails"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="View Details"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/bg_orange_without_stroke"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!--    <ImageView-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:backgroundTint="@color/white"-->
        <!--        android:background="@drawable/ic_baseline_remove_red_eye_24"-->
        <!--        app:layout_constraintTop_toTopOf="@id/btnViewDetails"-->
        <!--        app:layout_constraintBottom_toBottomOf="@id/btnViewDetails"-->
        <!--        app:layout_constraintStart_toStartOf="@id/btnViewDetails"-->
        <!--        app:layout_constraintEnd_toEndOf="@id/btnViewDetails"-->
        <!--        app:layout_constraintHorizontal_bias="0.1"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>