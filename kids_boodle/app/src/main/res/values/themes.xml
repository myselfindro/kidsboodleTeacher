<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KidsBoodleTeacher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/shade_of_yellow</item>
        <item name="colorPrimaryVariant">@color/shade_of_blue</item>
        <item name="colorOnPrimary">@color/shade_of_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_left_arrow</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
<!--    -->
<!--    <style name="Theme.KidsBoodleTeacher.NoActionBar" parent="Theme.KidsBoodleTeacher">-->
<!--        -->
<!--    </style>-->

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ThemeKidsBoodleCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#FF8741</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_bar_selector</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/black</item>
    </style>



    <style name="MyCustomTabLayoutTimetable" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/timetable_bar_selector</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/deep_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">@dimen/_3sdp</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="custom_autoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="android:background">@drawable/background_box_less_grey</item>
    </style>

    <style name="custom_autoCompleteTextView_White" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="android:background">@drawable/box_with_white_bg</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="custom_autoCompleteTextView_Pure_White" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="android:background">@drawable/box_with_pure_white_bg</item>
    </style>

    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_left_arrow</item>
    </style>


    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/shade_of_blue</item>
        <item name="android:textColorSecondary">@color/deep_grey</item>
    </style>


    <!--    <style name="custom_autoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">-->
<!--        <item name="android:dropDownSelector">@drawable/ic_baseline_keyboard_arrow_down_24</item>-->
<!--        <item name="android:background">@drawable/dropdown_bg</item>-->
<!--    </style>-->

    <style parent="@android:style/Widget.Spinner" name="SpinnerwithNoArrow">
        <item name="android:background">@drawable/dropdown_bg</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/dropdown_bg</item>
        <item name="icon">@drawable/ic_baseline_keyboard_arrow_down_24</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/left_right_corner_rounded_dialog</item>
    </style>
    <style name="Theme.KidsBoodleTeacher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.KidsBoodleTeacher.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.KidsBoodleTeacher.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>